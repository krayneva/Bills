<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        >


    <LinearLayout
            android:id = "@+id/linearLayoutPreviewButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal">

        <ImageButton android:id="@+id/buttonRecapture"
                     android:layout_width="@dimen/buttonSize"
                     android:layout_height="@dimen/buttonSize"
                     android:src="@drawable/button_cancel"
                android:scaleType="fitXY"/>

        <ImageButton android:id="@+id/buttonAccept"
                     android:layout_width="@dimen/buttonSize"
                     android:layout_height="@dimen/buttonSize"
                     android:scaleType="fitXY"
                     android:src="@drawable/button_ok"/>

    </LinearLayout>


    <ImageView android:layout_width="match_parent" android:layout_height="200dp"
               android:layout_alignParentLeft="true"
               android:layout_alignParentRight="true"+
               android:layout_alignParentTop="true"
               android:layout_above="@id/linearLayoutPreviewButtons"

               android:id = "@+id/previewImage"/>

    <TextView
            android:id = "@+id/textViewPreview"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity = "center"
            android:layout_gravity="center"
            android:text="Оцените качество снимка"

            />

</RelativeLayout>