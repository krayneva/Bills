<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Режим съемки"
        android:id="@+id/textView" />

    <Spinner
    android:id="@+id/sceneModeSpinner"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Режим фокусировки"/>


    <Spinner
        android:id="@+id/focusModeSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Стабилизация"/>


    <Spinner
        android:id="@+id/antiBandingSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Баланс белого"/>


    <Spinner
        android:id="@+id/whiteBalanceSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Формат изображения"/>


    <Spinner
        android:id="@+id/pictureFormatSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Цветовые эффекты"/>


    <Spinner
        android:id="@+id/colorEffectsSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    
   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Цветовая информация"/>


    <Spinner
        android:id="@+id/colorModeSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewExposureCompensation"
        android:text="Значение экспозиции"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarExposureCompensation" />



</LinearLayout>
